// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? // @db.Text
  access_token      String? // @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? // @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  recipes       Recipe[]       @relation("RecipeAuthor")
  savedRecipes  Recipe[]       @relation("RecipeSaved")
  reviews       RecipeReview[]
  shoppingLists ShoppingList[]
  followedBy    User[]         @relation("UserFollows")
  following     User[]         @relation("UserFollows")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model RecipeLabelCategory {
  id          String        @id @default(cuid())
  name        String        @unique
  RecipeLabel RecipeLabel[]
}

model RecipeLabel {
  id         String              @id @default(cuid())
  name       String              @unique
  category   RecipeLabelCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String
  Recipe     Recipe[]            @relation("RecipeLabels")
}

enum RecipeDifficulty {
  EASY
  MEDIUM
  HARD
  EXPERT
}

model Recipe {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String
  difficulty  RecipeDifficulty
  steps       RecipeStep[]
  labels      RecipeLabel[]    @relation("RecipeLabels")
  reviews     RecipeReview[]
  tags        String[]
  images      String[]

  author     User   @relation("RecipeAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  authorId   String
  savedUsers User[] @relation("RecipeSaved")

  @@index([name])
}

enum RecipeStepType {
  PREP
  COOK
  REST
  SEASON
  SERVE
  MIX
}

model RecipeStep {
  id          String         @id @default(cuid())
  description String
  duration    Int
  stepType    RecipeStepType

  recipe      Recipe                 @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId    String
  ingredients RecipeStepIngredient[]
}

enum Unit {
  GRAM
  KILOGRAM
  LITER
  MILLILITER
  TEASPOON
  TABLESPOON
  CUP
  PINCH
  PIECE
}

model RecipeStepIngredient {
  id           String     @id @default(cuid())
  name         String
  quantity     Float
  unit         Unit
  recipeStep   RecipeStep @relation(fields: [recipeStepId], references: [id], onDelete: Cascade)
  recipeStepId String
}

model RecipeReview {
  id       String  @id @default(cuid())
  rating   Int // 1-5
  comment  String?
  recipe   Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId String
  author   User    @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  // limit that user can only review once
  @@unique([recipeId, authorId])
}

model ShoppingList {
  id          String             @id @default(cuid())
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  name        String
  description String?
  items       ShoppingListItem[]
  author      User               @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String
}

model ShoppingListItem {
  id             String       @id @default(cuid())
  name           String
  quantity       Float
  unit           Unit
  shoppingList   ShoppingList @relation(fields: [shoppingListId], references: [id], onDelete: Cascade)
  shoppingListId String

  @@unique([name, unit, shoppingListId])
}

